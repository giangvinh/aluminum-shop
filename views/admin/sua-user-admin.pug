block content

    // start: page
    .row
        .col-lg-12
            section.panel
                header.panel-heading
                    .panel-actions
                        a.panel-action.panel-action-toggle(href='#', data-panel-toggle='')
                        a.panel-action.panel-action-dismiss(href='#', data-panel-dismiss='')
                    h2.panel-title Sửa user
                .panel-body

                    .form-group.need
                        label.col-md-3.control-label Tên người dùng
                        .col-md-9
                            input#ip-username.form-control(type='text' value=user_name name=user_id)
                    .form-group.need
                        label.col-md-3.control-label Mật khẩu
                        .col-md-9
                            input#ip-password.form-control(type='password' value=password)
                    .form-group.need
                        label.col-md-3.control-label Nhập lại mật khẩu
                        .col-md-9
                            input#ip-retype.form-control(type='password' value=password)


                footer(class="panel-footer")
                    div(class="row")
                        div(class="col-sm-9 col-sm-offset-3")
                            button.btn.btn-primary.btn-delete(onclick='update()')= "Cập nhật thông tin người dùng"




