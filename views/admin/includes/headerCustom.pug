mixin headerCustom(page_title, parent_page_title)
    header.page-header
        h2 #{page_title}
        div(class="right-wrapper pull-right")
            ol.breadcrumbs
                li
                    a(href="dashboard")
                        i(class="fa fa-home")
                li
                    span #{parent_page_title}
                li
                    span #{page_title}

            a(class="sidebar-right-toggle" data-open="sidebar-right")
                i(class="fa fa-chevron-left")
