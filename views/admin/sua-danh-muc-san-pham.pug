block content

    // start: page
    .row
        .col-lg-12
            section.panel
                header.panel-heading
                    .panel-actions
                        a.panel-action.panel-action-toggle(href='#', data-panel-toggle='')
                        a.panel-action.panel-action-dismiss(href='#', data-panel-dismiss='')
                    h2.panel-title Sửa danh mục sản phẩm
                .panel-body
                    .form-group.need
                        label.col-md-3.control-label Tên danh mục
                        .col-md-9
                            input#ip-name-vi.form-control(type='text' value=danhmuc.name)

                footer(class="panel-footer")
                    div(class="row")
                        div(class="col-sm-9 col-sm-offset-3")
                            button.btn.btn-primary.btn-delete(onclick='update()')= "Cập nhật thông tin danh mục sản phẩm"






